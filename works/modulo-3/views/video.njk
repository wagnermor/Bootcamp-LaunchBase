{% extends "layout.njk" %}

{% block head %}

<title>{{item.title}} - Wagner Moreira</title>

{% endblock %}

{% block content %}     
<div id="wrapper" class="video">
    <h1>{{item.title}}</h1>
</div>

<section class="video">
    
    <div class="card" id="{{item.id}}"><!-- Start-->
        <div class="card-video-container">
            <iframe src="https://youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
        </div>
        <div class="card-content">
            <p>{{item.title}}</p>
        </div>
        <div class="card-info">
            <p class="card-min">{{item.duration}}</p> <!-- Classe criada apara centralizar o texto -->
            <p class="card-price">{{item.price}}</p>
        </div>
    </div>

</section>

{% endblock %}